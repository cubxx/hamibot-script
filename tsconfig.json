{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "noImplicitAny": false,
    "verbatimModuleSyntax": true,
    "checkJs": true,
    "paths": {
      "~/*": ["./src/shared/*"]
    },
    "types": ["node", "hamibot-types"]
  }
}
